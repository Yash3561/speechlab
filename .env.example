# Environment Variables (copy to .env)
# =====================================

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Database (Supabase in production)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/speechlab

# Redis (Upstash in production)
REDIS_URL=redis://localhost:6379

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_S3_ENDPOINT_URL=http://localhost:9000

# S3/MinIO (Cloudflare R2 in production)
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=speechlab-artifacts

# Ray
RAY_ADDRESS=auto
